<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/userEmailFragment"
        android:name="com.example.healthc.presentation.auth.register.UserEmailFragment"
        android:label="UserEmailFragment"
        tools:layout="@layout/fragment_user_email" >
        <action
            android:id="@+id/action_userEmailFragment_to_userPasswordFragment"
            app:destination="@id/userPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/userPasswordFragment"
        android:name="com.example.healthc.presentation.auth.register.UserPasswordFragment"
        android:label="UserPasswordFragment"
        tools:layout="@layout/fragment_user_password" >
    <action
            android:id="@+id/action_userPasswordFragment_to_userInfoFragment"
            app:destination="@id/userInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.example.healthc.presentation.auth.register.UserInfoFragment"
        android:label="UserInfoFragment"
        tools:layout="@layout/fragment_user_info" />
    <fragment
        android:id="@+id/userNameFragment"
        android:name="com.example.healthc.presentation.auth.register.UserNameFragment"
        android:label="userNameFragment"
        tools:layout="@layout/fragment_user_name" >
    <action
            android:id="@+id/action_userNameFragment_to_userEmailFragment"
            app:destination="@id/userEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.healthc.presentation.auth.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" >
    <action
            android:id="@+id/action_loginFragment_to_userNameFragment"
            app:destination="@id/userNameFragment" />
    </fragment>
</navigation>